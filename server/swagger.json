{
  "swagger": "2.0",
  "info": {
    "description": "Nodejs API",
    "version": "1.0.0",
    "title": "Noderestaurant API"
  },
  "host": "locahost:5000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Order",
      "description": "Everything about your orders"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/order": {
      "get": {
        "tags": [
          "order"
        ],
        "summary": "Find all the orders",
        "description": "Returns all the orders",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "400": {
            "description": "error message"
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      },
      "post": {
        "tags": [
          "order"
        ],
        "summary": "Add a new order to the restaurant",
        "description": "",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Items object that needs to be added to the store",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Order"
            }
          }
        ],
        "responses": {
          "420": {
            "description": "error message"
          },
          "422": {
            "description": "Invalid items"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "Order": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "personalInfo": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            },
            "number": {
              "type": "string"
            }
          }
        },
        "meals": {
          "type": "array",
          "items": {
            "type": "object",
            "example": [
              {
                "name": "test",
                "price": 200
              }
            ]
          }
        },
        "totalCost": {
          "type": "integer",
          "format": "int32"
        },
        "email": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "location": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "string"
            },
            "lng": {
              "type": "string"
            }
          }
        }
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "success": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}